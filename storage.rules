rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Semua file di bucket
    match /{allPaths=**} {
      // Izinkan semua operasi baca (read) jika pengguna sudah login.
      allow read: if request.auth != null;
    }

    // Hanya izinkan operasi tulis (write) di dalam folder produk dari toko yang sesuai.
    match /products/{storeId}/{allPaths=**} {
      allow write: if request.auth != null 
                   && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.storeId == storeId
                   && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'cashier'];
    }
    
    // Aturan untuk bukti transfer
    match /top-up-proofs/{storeId}/{allPaths=**} {
       allow write: if request.auth != null 
                   && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.storeId == storeId
                   && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'cashier'];
    }
  }
}
