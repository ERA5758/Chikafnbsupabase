
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "index.ts",
    "ai.ts",
    "reports.ts",
    "firebase-admin.ts",
    "whatsapp-settings.ts",
    "src/ai/**/*.ts"
  ]
}
