rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an admin of a specific store
    function isAdmin(storeId) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      let storeDoc = get(/databases/$(database)/documents/stores/$(storeId)).data;
      return request.auth.uid in storeDoc.adminUids && userDoc.role == 'admin';
    }
    
    // Helper function to check if a user is a cashier of a specific store
    function isCashier(storeId) {
       let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
       return userDoc.role == 'cashier' && userDoc.storeId == storeId;
    }
    
    // Helper function to check if user belongs to the store
    function isStoreMember(storeId) {
        return isAdmin(storeId) || isCashier(storeId);
    }
    
    // Users can only read their own data. Admins can read data of users in their store.
    match /users/{userId} {
      allow read: if request.auth.uid == userId 
                  || (isAdmin(get(/databases/$(database)/documents/users/$(userId)).data.storeId));
      allow update: if request.auth.uid == userId; // Users can update their own data (e.g., password)
      allow create, delete: if false; // Creation is handled by a Cloud Function for security
    }

    // Rules for global settings
    match /appSettings/{docId} {
      allow read: if request.auth != null; // Any authenticated user can read
      allow write: if false; // Only superadmin (via server/console) can write
    }
    
    match /redemptionOptions/{optionId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for stores and their subcollections
    match /stores/{storeId} {
      // Only members of the store can read the main store document
      allow read: if isStoreMember(storeId);
      allow write: if isAdmin(storeId); // Only admins can update store details (e.g., token balance, settings)

      // Products can be read by any store member, written only by admins
      match /products/{productId} {
        allow read: if isStoreMember(storeId);
        allow write: if isAdmin(storeId);
      }
      
      // Customers can be read/written by any store member
      match /customers/{customerId} {
        allow read, write: if isStoreMember(storeId);
      }
      
      // Transactions can be read/written by any store member
      match /transactions/{transactionId} {
         allow read, write: if isStoreMember(storeId);
      }
      
      // Tables can be read/written by any store member
      match /tables/{tableId} {
         allow read, write: if isStoreMember(storeId);
      }

      // Other sub-collections follow the same pattern
      match /{subcollection}/{docId} {
        allow read, write: if isStoreMember(storeId);
      }
    }
    
     match /pendingOrders/{orderId} {
        allow read, write: if request.auth != null;
     }
  }
}
