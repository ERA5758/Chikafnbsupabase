rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Admin dapat membaca dan menulis dokumen pengguna mana pun.
      // Hal ini diperlukan agar mereka dapat membuat karyawan baru (dokumen pengguna).
      allow read, write: if request.auth.token.role == 'admin';

      // Pengguna non-admin hanya dapat membaca atau memperbarui dokumennya sendiri.
      // 'update' digunakan sebagai ganti 'write' untuk mencegah mereka menghapus akun mereka sendiri.
      // Mereka tidak dapat membuat dokumen pengguna mereka sendiri secara langsung; itu dilakukan melalui proses registrasi/pembuatan karyawan.
      allow read, update: if request.auth.uid == userId;
    }

    // 🏪 TOKO & SEMUA DATA DI DALAMNYA
    match /stores/{storeId}/{document=**} {
      // Akses diberikan jika pengguna adalah admin ATAU
      // storeId dokumen pengguna mereka cocok dengan storeId yang diakses.
      allow read, write: if request.auth.token.role == 'admin' || (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.storeId == storeId);
    }

    // Pengaturan Global yang bisa dibaca semua pengguna terautentikasi
    match /appSettings/{docId} {
      allow read: if request.auth != null;
    }
    match /redemptionOptions/{docId} {
      allow read: if request.auth != null;
    }
  }
}
