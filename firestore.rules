
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNGSI BANTUAN ---

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isSuperAdmin() {
      // Pastikan ada properti 'role' untuk mencegah error
      return isSignedIn() && getUserData().get('role', '') == 'superadmin';
    }
    
    function isStoreAdmin(storeId) {
      // Memastikan 'adminUids' ada dan merupakan list
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/stores/$(storeId)).data.get('adminUids', []);
    }

    function isUserOfStore(storeId) {
      // Logika yang diperbaiki:
      // Pengguna adalah bagian dari toko jika salah satu dari kondisi berikut terpenuhi:
      // 1. Dia adalah superadmin.
      // 2. Dia adalah admin dari toko tersebut.
      // 3. 'storeId' di profilnya cocok dengan storeId yang diakses (untuk kasir).
      return isSignedIn() && (isSuperAdmin() || isStoreAdmin(storeId) || getUserData().get('storeId', '') == storeId);
    }

    // --- ATURAN GLOBAL ---
    
    match /appSettings/{docId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /redemptionOptions/{promoId} {
      allow read: if isSignedIn();
      // Izinkan tulis jika superadmin, atau jika admin toko yang sedang membuat/mengubah promo.
      // Untuk 'create', 'resource' merujuk pada data yang AKAN dibuat.
      allow write: if isSuperAdmin() || isStoreAdmin(request.resource.data.storeId);
    }

    // --- ATURAN PENGGUNA ---
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin() || isStoreAdmin(getUserData().storeId));
      allow create: if isSignedIn(); // Disederhanakan, registrasi ditangani oleh Cloud Function.
      allow update: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin() || isStoreAdmin(resource.data.storeId));
      allow delete: if isSuperAdmin();
    }
    

    // --- ATURAN DATA TOKO ---

    match /stores/{storeId} {
      allow read: if isSignedIn();
      allow update: if isStoreAdmin(storeId) || isSuperAdmin();
      allow create, delete: if isSuperAdmin();
    }

    match /stores/{storeId}/{subcollection}/{docId=**} {
      allow read: if isUserOfStore(storeId);
      allow write: if isStoreAdmin(storeId) || isSuperAdmin();
    }
    
    match /stores/{storeId}/transactions/{transactionId} {
       allow read: if isUserOfStore(storeId);
       allow create: if isUserOfStore(storeId);
       allow update, delete: if isStoreAdmin(storeId) || isSuperAdmin();
    }
  }
}
