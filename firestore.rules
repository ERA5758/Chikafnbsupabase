rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // üë§ PENGGUNA: Setiap pengguna hanya bisa mengelola datanya sendiri.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // üè™ TOKO & SEMUA DATA DI DALAMNYA
    match /stores/{storeId}/{document=**} {
      // Izin akses diberikan jika `storeId` pada token kustom pengguna cocok dengan `storeId` yang diakses.
      // Dalam implementasi ini, kita akan memeriksa field 'storeId' di dokumen pengguna.
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.storeId == storeId;
    }

    // Pengaturan Global yang bisa dibaca semua pengguna terautentikasi
    match /appSettings/{docId} {
      allow read: if request.auth != null;
      // allow write: if false; // Hanya bisa diubah dari Firebase Console
    }
    match /redemptionOptions/{docId} {
      allow read: if request.auth != null;
      // allow write: if false; // Hanya bisa diubah dari Firebase Console
    }
  }
}
