rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNGSI BANTUAN ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'superadmin';
    }
    
    function isStoreAdmin(storeId) {
      return isSignedIn() && request.auth.token.storeId == storeId && request.auth.token.role == 'admin';
    }

    function isUserOfStore(storeId) {
      return isSignedIn() && request.auth.token.storeId == storeId;
    }

    // --- ATURAN GLOBAL ---
    match /appSettings/{docId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /redemptionOptions/{promoId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    // --- ATURAN PENGGUNA ---
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow create: if true; // Managed by Cloud Function
      allow update: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow delete: if isSuperAdmin();
    }
    
    // --- ATURAN PESANAN TERTUNDA (PENDING ORDERS) ---
    match /pendingOrders/{orderId} {
      allow read, create, delete: if isUserOfStore(request.resource.data.storeId) || isSuperAdmin();
      allow update: if false; // Prevent direct updates
    }

    // --- ATURAN DATA TOKO ---
    match /stores/{storeId} {
      allow read: if isSignedIn();
      allow update: if isStoreAdmin(storeId) || isSuperAdmin();
      allow create, delete: if isSuperAdmin();
    }

    match /stores/{storeId}/{subcollection}/{docId=**} {
      allow read: if isUserOfStore(storeId) || isSuperAdmin();
      allow write: if isStoreAdmin(storeId) || isSuperAdmin();
    }
    
    match /stores/{storeId}/transactions/{transactionId} {
       allow read: if isUserOfStore(storeId) || isSuperAdmin();
       allow create: if isUserOfStore(storeId);
       allow update, delete: if isStoreAdmin(storeId) || isSuperAdmin();
    }
    
    // --- ATURAN UNTUK CLOUD FUNCTION (MIDTRANS TOP UP) ---
    match /topUpRequests/{requestId} {
       allow create: if isSignedIn();
       allow read, update, delete: if false;
    }
  }
}
